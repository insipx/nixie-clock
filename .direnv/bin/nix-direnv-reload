#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/andrewplaza/Projects/insipx/nixie-clock" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/andrewplaza/Projects/insipx/nixie-clock")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/andrewplaza/Projects/insipx/nixie-clock" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/andrewplaza/Projects/insipx/nixie-clock/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/andrewplaza/Projects/insipx/nixie-clock/.envrc" "/Users/andrewplaza/Projects/insipx/nixie-clock/.direnv"/*.rc
